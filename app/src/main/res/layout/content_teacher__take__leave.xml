<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.Teacher_Take_Leave"
    tools:showIn="@layout/activity_teacher__take__leave"
    android:orientation="vertical"
    android:background="@drawable/icon_background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <TextView
            android:id="@+id/leavefromdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="From"
            android:textAlignment="center"
            android:textColor="#5f3696"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/leavetodate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_125sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_toRightOf="@+id/leavefromdate"
            android:text="To "
            android:textAlignment="center"
            android:textColor="#5f3696"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/selectfromdate"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@+id/leavefromdate"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/select_date"
            android:editable="false"
            android:focusable="false"
            android:inputType="date"
            android:hint="Select date"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_9sdp" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="@dimen/_28sdp"
            android:background="@drawable/ic_perm_contact_calendar_black_24dp" />


        <EditText
            android:id="@+id/selecttodate"
            android:layout_width="141dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@+id/leavetodate"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_36sdp"
            android:layout_toRightOf="@+id/selectfromdate"
            android:background="@drawable/select_date"
            android:editable="false"
            android:inputType="date"
            android:focusable="false"
            android:hint="Select date"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_9sdp" />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="@dimen/_28sdp"
            android:background="@drawable/ic_perm_contact_calendar_black_24dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/time">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/leavetype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Leave Type"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/leaveavailable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Available"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/leavetaken"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Leaves Taken"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_35sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/leavetypetext1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/leaveavailabletext1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/black" />

                <EditText
                    android:id="@+id/leavetakentext1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textColorLink="@color/black"
                    android:textCursorDrawable="@color/black"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_60sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/leavetypetext2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/leaveavailabletext2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/black" />

                <EditText
                    android:id="@+id/leavetakentext2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textColorLink="@color/black"
                    android:textCursorDrawable="@color/black"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_85sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_28sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/leavetypetext3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/leaveavailabletext3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view6"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/black" />

                <EditText
                    android:id="@+id/leavetakentext3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textColorLink="@color/black"
                    android:textCursorDrawable="@color/black"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/leavetypetext4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=""
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/viewlt4"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/leaveavailabletext4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=""
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/viewla4"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@color/black" />

                    <EditText
                        android:id="@+id/leavetakentext4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:text="0"
                        android:textColorLink="@color/black"
                        android:textCursorDrawable="@color/black"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/leavetypetext5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=""
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/viewlt5"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/leaveavailabletext5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=""
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/viewla5"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@color/black" />

                    <EditText
                        android:id="@+id/leavetakentext5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:text="0"
                        android:textColorLink="@color/black"
                        android:textCursorDrawable="@color/black"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lasttotal"
                android:layout_marginLeft="@dimen/_107sdp">

                <TextView
                    android:id="@+id/leavetotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Total"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/leavetotaltext"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="0"
                    android:textColorLink="@color/black"
                    android:textCursorDrawable="@color/black"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp" />


        </LinearLayout>

        <EditText
            android:id="@+id/leavereason"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_210sdp"
            android:gravity="top|left"
            android:hint="Reason to leave "
            android:background="@drawable/description_bg"
            android:padding="@dimen/_10sdp"/>

        <Button
            android:id="@+id/leavesubmit"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@id/leavereason"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/activebtn"
            android:text="Submit"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textColor="@color/white1" />

    </RelativeLayout>
</RelativeLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#5f3696"
        android:textSize="8dp"
        android:padding="2dp"
        android:singleLine="true"
        android:layout_alignParentBottom="true"
        android:text="Powered By Syon Technologies" />

</RelativeLayout>