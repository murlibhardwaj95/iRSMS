<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/_15sdp"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <!--
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="#AB501F"
                android:textSize="10dp"
                android:layout_marginBottom="2dp"
                android:layout_alignParentBottom="true"
                android:text="Powered By Syon Technologies" />
        -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardBackgroundColor="#f2f3f4">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:background="#f2f3f4"
                android:paddingBottom="@dimen/_8sdp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Aadhar No."
                        android:textColor="#000000"
                        android:textSize="@dimen/_10sdp"
                        android:typeface="sans"
                        android:drawableLeft="@drawable/aadar_drawable"
                        android:drawablePadding="@dimen/_3sdp"/>

                    <EditText
                        android:id="@+id/aadharno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="4530-1234-9494-2343"
                        android:editable="false"
                        android:focusable="false"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_weight="1"
                        android:text="Student Type"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#000000"
                        android:typeface="sans"
                        android:drawableLeft="@drawable/ic_person2_black_24dp"
                        android:drawablePadding="@dimen/_1sdp"/>

                    <EditText
                        android:id="@+id/stype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Day Scholar"
                        android:editable="false"
                        android:focusable="false"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Mobile"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#000000"
                        android:typeface="sans"
                        android:drawableLeft="@drawable/phone_drawable"
                        android:drawablePadding="@dimen/_3sdp"/>

                    <EditText
                        android:id="@+id/smb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="9694534870"
                        android:editable="false"
                        android:focusable="false"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Email"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#000000"
                        android:typeface="sans"
                        android:drawableLeft="@drawable/email_drawable"
                        android:drawablePadding="@dimen/_3sdp"/>

                    <EditText
                        android:id="@+id/sgmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ssoessoe6@gmail.com"
                        android:editable="false"
                        android:focusable="false"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Address"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#000000"
                        android:typeface="sans"
                        android:drawableLeft="@drawable/address_drawable"
                        android:drawablePadding="@dimen/_3sdp"/>

                    <EditText
                        android:id="@+id/sadd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="B-4578,PRATAP NAGAR,SANGANER,JAIPUR(RAJ)"
                        android:textSize="@dimen/_10sdp"
                        android:editable="false"
                        android:focusable="false"/>

                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>
</ScrollView>