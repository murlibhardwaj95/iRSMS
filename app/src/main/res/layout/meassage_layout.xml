<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_below="@+id/header_layout"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/meaage">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/circle"
        app:riv_oval="true"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_toRightOf="@+id/circle"
        android:text="Name"
        android:textSize="@dimen/_9sdp"
        android:textColor="@color/Admin_theme"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_body"
        android:textColor="#000000"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:elevation="@dimen/_2sdp"
        android:singleLine="false"
        android:layout_marginRight="@dimen/_5sdp"
        android:textSize="@dimen/_9sdp"
        android:layout_toRightOf="@+id/circle"
        android:text="Placeholder message"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_body"
        android:id="@+id/datetimea"
        android:text="Time"
        android:textSize="@dimen/_9sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textColor="#000000"
        />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_4sdp">
        <View
             android:layout_width="match_parent"
             android:layout_height="@dimen/_2sdp"
             android:background="@color/black"
             android:layout_weight="1"
             android:layout_gravity="center_vertical">

        </View>

        <TextView
            android:id="@+id/discuss_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:shadowColor="@color/white"
            android:shadowRadius="5.00"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/black"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

            </View>
    </LinearLayout>

</RelativeLayout>