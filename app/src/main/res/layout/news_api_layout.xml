                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/ic_download" />
                </LinearLayout>

                <TextView
