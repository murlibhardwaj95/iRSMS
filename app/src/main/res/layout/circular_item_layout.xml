<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight=".5"
            android:paddingTop="@dimen/_5sdp"
            android:text="31 APR 2018"
            android:textSize="18dp" />


        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight=".3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/circle_color"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:src="@drawable/orange__circle" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:src="@drawable/line" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/lll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_toRightOf="@+id/img"
            android:layout_weight="1.2"
            android:background="@drawable/box_with_arrow"
            android:orientation="vertical"
            android:paddingTop="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:paddingBottom="5dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="5dp"
                    android:text="NOTICE"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/download_ic"
                    android:layout_width="17dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_download" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/_circular_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:minLines="2"
                    android:paddingBottom="5dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="5dp"
                    android:text="Dear Parents,"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="#7d000000"
                    android:paddingBottom="5dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="20dp"
                    android:visibility="visible"></View>

                <TextView
                    android:id="@+id/readmore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="5dp"
                    android:text="READ MORE >>"
                    android:textColor="#dc6928"
                    android:textSize="12dp"
                    android:visibility="visible" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>